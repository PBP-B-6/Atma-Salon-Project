<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@color/primary_yellow"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/nama_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wendy Winata"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/email_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wendywinata@atmasalon.com"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btnTambahSaldo"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:text="Tambah Saldo"
            android:layout_marginBottom="33dp"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnKeluar"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:layout_marginBottom="33dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"/>

    </LinearLayout>

</FrameLayout>